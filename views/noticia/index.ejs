<%- include('../partials/_header')%>

<div class="container">
    <div class="row mt-5">
       <h1><%logado%></h1>
        <% if(!logado || roll!='ADMIN'){%>
            <div class="col-md-12">
                <%}else{%>
            <div class="col-md-8">
                <%}%>
            <div class="card">
            
                <div class="card-body">
                    
                    <% if (data){ %>
                        <% for(var i=0; i<data.length;i++){%>
                            
                                <img src="<%= data[i].imagen %>" class="card-img-top mb-3">
                                <h5 class="card-title"><%= data[i].titulo %></h5>
                                <p class="card-text"><%= data[i].id %></p>
                                <p class="card-text"><%= data[i].permakink %></p>
                                
                                <p class="card-text"><%= data[i].texto %></p>

                                <% if(logado){ %>
                                    <% if(roll=='ADMIN'){%>
                                <form action="/noticia/<%= data[i].id %>/edit" method="get">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-info">
                                            Editar noticia
                                        </button>
                                    </div>
                                </form>
                                <form action="/noticia/<%= data[i].id %>?_method=DELETE" method="post">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-danger">
                                            Eliminar noticia
                                        </button>
                                    </div>
                                </form>
                                <%}%>
                                <%}%>
                             
                                <hr class="mt-3">
                            <%}%>
                    
                    <% } %>
                  
                </div>
            </div>
            
        </div>
        <% if(logado){ %>
            <% if(roll=='ADMIN'){%>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/noticia" method="post">
                        <div class="form-group">
                            <input type="text" name="titulo" placeholder="Título" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="texto" placeholder="Texto Noticia" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="url" name="permalink" placeholder="URL Permalink" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="url" name="imagen" placeholder="URL Imágen" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar Noticia
                        </button>
                    </form>
                </div>
            </div>
        </div>

                        <%}%>
                        <%}%>
                        
    </div>
       
</div>


<%- include('../partials/_footer')%>

                    
                            