<%- include('../partials/_header') %>

<div class="container">
    <div class="row mt-5">
        
        <% if(!logado || roll!='BOSS_TEAM'){%>
            <div class="col-md-12">
                <%}else{%>
            <div class="col-md-8">
                <%}%>
       
            <div class="card">
            
                <div class="card-body">
                    
                    <% if (data){ %>
                        <% for(var i=0; i<data.length;i++){%>
                            <% if (roll=='BOSS_TEAM'){%>
                                <%if(idSesion==data[i].idUsuario){%>
                                <img src="<%= data[i].logo %>" class="thumbnail card-img-top mb-3">
                                <h5 class="card-title"><%= data[i].nombre %></h5>
                                
                                <p class="card-text"><%= data[i].twitter %></p>

                                <p class="card-texto">ID del Responsable de equipo <%= data[i].idUsuario %></p>
                                <%}%>
                            <%}%>  
                                
                               
                                <% if(logado){ %>
                                    <% if(roll=='BOSS_TEAM'){%>
                                        <%if(idSesion==data[i].idUsuario){%>

                                        <form action="/equipo/<%= data[i].id %>/edit" method="get">
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-info">
                                                    Editar equipo
                                                </button>
                                            </div>
                                        </form>
                                        <form action="/circuito/<%= data[i].id %>?_method=DELETE" method="post">
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-danger">
                                                    Eliminar equipo
                                                </button>
                                            </div>
                                        </form>
                                        <%}%>
                                   <%}%>
                                <%}%>
                                <hr class="mt-3">
                            <%}%>
                        
                    <% } %>
                  
                </div>
            </div>
            
        </div>

        <% if(logado){ %>
            <% if (roll=='BOSS_TEAM'){%>
                

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/equipo" method="post">
                        <div class="form-group">
                          
                            Equipo:
                            <select class="form-control" name="nombre">
                                <option>MERCEDES</option>
                                <option>RED BULL</option>
                                <option>MCLAREN</option>
                                <option>ASTON MARTIN</option>
                                <option>ALPINE</option>
                                <option>FERRARI</option>
                                <option>ALPHATAURI</option>
                                <option>ALFA ROMEO</option>
                                <option>HAAS</option>
                                <option>WILLIAMS</option>
                            </select>
                        </div>
                        <div class="form-group">
                            Logo Escuderia:
                            <select class="form-control" name="logo">
                                <option>https://www.formulaf1.es/wp-content/uploads/2012/03/mercedes-f1-218x150.jpeg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2012/01/red-bull-f1-218x150.jpeg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2012/03/logo-mclaren.jpg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2012/03/aston-martin-f1-218x150.png</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2016/03/alpine-f1-218x150.jpeg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2012/01/147ferrari_logo.jpg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2012/03/alphatauri-f1-218x150.jpeg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2019/02/alfa-1-e1554172483411-218x150.jpg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2016/03/HaasF1Team-Logo.jpg</option>
                                <option>https://www.formulaf1.es/wp-content/uploads/2012/03/williams-f1-218x150.jpeg</option>
                            </select>
                        </div>
                        <div class="form-group">
                            Cuenta Twitter:
                            <select class="form-control" name="twitter">
                                <option>@MercedesAMGF1</option>
                                <option>@redbullracing</option>
                                <option>@McLarenF1</option>
                                <option>@AstonMartinF1</option>
                                <option>@AlpineF1Team</option>
                                <option>@Ferrari</option>
                                <option>@AlphaTauriF1</option>
                                <option>@alfaromeoracing</option>
                                <option>@HaasF1Team</option>
                                <option>@WilliamsRacing</option>
                            </select>
                        </div>
                        <div class="form-group">
                            Id Usuario:
                            <input type="number" name="idUsuario" placeholder="Id del usuario Responsable del Equipo" class="form-control">

                        </div>
                       
                        <button type="submit" class="btn btn-primary">
                            Guardar Equipo
                        </button>


                    </form>
                </div>
            </div>
            
        </div>
        <%}%>
        <%}  %> 
    </div>
</div>


<%- include('../partials/_footer') %>
